<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vediotest.activity.MainActivity1">
    <!--<include layout="@layout/titlebar">-->
    <!--</include>-->
    <FrameLayout
        android:id="@+id/fl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:padding="3dp"
        android:background="#11000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_video"
            android:text="本地视频"
            android:drawableTop="@drawable/rb_video_select"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/rb_music"
            android:text="本地音乐"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_music_select"
            android:gravity="center"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:button="@null"
            />

    </RadioGroup>
</LinearLayout>
