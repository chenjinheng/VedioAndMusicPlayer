<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        >
        <LinearLayout

            android:gravity="center_vertical"
            android:background="@drawable/bg_player_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:id="@+id/tv_name_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="视频名称"
                />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_battery"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_battery_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_player_top_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/btn_voice"
                android:background="@drawable/btn_voice_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbar_voice"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:progressDrawable="@drawable/progress_horizontal"

                android:progress="20"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_switch_player"
                android:background="@drawable/btn_switch_player_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_bottom"
        android:orientation="horizontal"
        android:layout_above="@+id/ll_select"
        >
        <TextView
            android:gravity="center_vertical"
            android:text="00:00"
            android:textColor="#ffffff"
            android:id="@+id/tv_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:progressDrawable="@drawable/progress_horizontal"
            android:id="@+id/seekbar_video"
            android:minHeight="6dp"
            android:maxHeight="6dp"
            android:progress="20"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center_vertical"
            android:text="12:00"
            android:id="@+id/tv_maxtime"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_player_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <Button
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btn_exit"
            android:background="@drawable/btn_exit_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btn_pre"
            android:background="@drawable/btn_pre_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btn_pause"
            android:background="@drawable/btn_pause_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btn_next"
            android:background="@drawable/btn_next_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btn_full_screen"
            android:background="@drawable/btn_full_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>